    <style name="Widget.Wallet.DebugDrawer.RowTitle" parent="Widget.Wallet.DebugDrawer.RowWidget">
        <item name="android:layout_marginRight">16dp</item>
        <!--<item name="android:textColor">?android:attr/textColorSecondaryInverse</item>-->
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Widget.Wallet.DebugDrawer.RowValue" parent="Widget.Wallet.DebugDrawer.RowWidget">
        <!--<item name="android:textColor">?android:attr/textColorPrimaryInverse</item>-->
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Widget.Wallet.DebugDrawer.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:spinnerDropDownItemStyle">@style/Widget.Wallet.DebugDrawer.DropDownItem</item>
        <item name="android:dropDownItemStyle">@style/Widget.Wallet.DebugDrawer.DropDownItem</item>
        <item name="android:spinnerItemStyle">@style/Widget.Wallet.DebugDrawer.DropDownItem</item>
    </style>
    <style name="Widget.Wallet.DebugDrawer.DropDownItem" parent="TextAppearance.AppCompat.Widget.DropDownItem">
